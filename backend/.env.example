# Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=Diabetes Prediction API
ENVIRONMENT=production  # development, staging, production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./diabetes_predictions.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/diabetes_db

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=True
CACHE_TTL_PREDICTION=3600
CACHE_TTL_MODEL_METRICS=7200

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE=memory://
# For Redis-based rate limiting:
# RATE_LIMIT_STORAGE=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=True
LOG_DIR=logs
LOG_JSON_FORMAT=False

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_REQUIRED=False
API_KEYS=key1,key2,key3  # Comma-separated list of valid API keys
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# HTTPS
HTTPS_ONLY=False
SECURE_COOKIES=False

# Model Configuration
DEFAULT_MODEL=xgboost
MODEL_PATH=models/
ENABLE_SHAP=True
MAX_BATCH_SIZE=1000

# Performance
WORKERS=4  # Number of Gunicorn workers
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
KEEPALIVE=5
TIMEOUT=120

# Monitoring
ENABLE_METRICS=True
SENTRY_DSN=  # Optional: Sentry DSN for error tracking
